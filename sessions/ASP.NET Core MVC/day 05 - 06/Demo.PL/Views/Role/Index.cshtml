@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}
<style>
    .row {
        display: flex;
        justify-content: center;
    }
</style>
<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />
@if (Model?.Count() > 0)
{
    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Id)</th>
                <th>@Html.DisplayNameFor(M => M.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a class="text-warning" asp-controller="Role" asp-action="Details" asp-route-id="@item.Id"> Details</a></td>
                    <td><a class="text-success" asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id"> Edit</a></td>
                    <td><a class="text-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id"> Delete</a></td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles Found!!</h3>
    </div>
}

