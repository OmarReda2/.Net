@model Employee

@{
    ViewData["Title"] = "Edit";
    var Departements = ViewData["Departement"] as List<Departement>;
}

<a asp-action="Index" class="btn btn-dark">Back Tio List</a>
<h1>Edit</h1>
<br />

<br />
<br />

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <select class="form-control" name="FK_DepartementId">
        <option>------ Departement -------</option>
        @foreach (var item in Departements)
        {
            <option value="@item.Id">@item.Name</option>
        }
    </select>

    <br />
    <span class="text-danger" asp-validation-for="Departement"></span>


    <input type="submit" class="btn btn-primary btn-success" value="Edit" />
</form>

@section Validation{
<partial name="_ValidationScriptsPartial" />
}

