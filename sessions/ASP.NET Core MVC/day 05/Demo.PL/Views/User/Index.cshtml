@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    var Departments = ViewData["Departments"] as List<DepartmentViewModel>;
}

<h1>All Users</h1>
<br />


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Id)</th>
                <th>@Html.DisplayNameFor(E => E.UserName)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.IsAgree)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.IsAgree</td>
                    <td><a class="btn btn-outline-warning" asp-controller="User" asp-action="Details" asp-route-id="@item.Id"> Details</a></td>
                    <td><a class="btn btn-outline-success" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id"> Edit</a></td>
                    <td><a class="btn btn-outline-danger" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id"> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Users Found!</h3>
    </div>
}

