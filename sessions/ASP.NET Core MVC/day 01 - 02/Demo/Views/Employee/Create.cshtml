@model Employee
@{
    ViewData["Title"] = "Create";
    var Departements = ViewData["Departement"] as List<Departement>;
    //or
    //ViewBag.Departements = new SelectList(ViewBag.Departements, "Id", "Name");
}
<a asp-action="Index" class="btn btn-dark">Back Tio List</a>
<h1>Create</h1>

<br />
<br />

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>

        <select class="form-control" name="FK_DepartementId">
            <option>-------- Departements --------</option>
            @foreach (var item in Departements)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        @*or*@
        @* <select class="form-control" name="FK_DepartementId" asp-items=ViewBag.Departements>
            <option>-------- Departements --------</option>
            </select>*@

        <span class="text-danger" asp-validation-for="Departement"></span>
    </div>

    <input type="submit" class="btn btn-primary" value="Add" />

    @section Validation {
    <partial name="_ValidationScriptsPartial" />
    }
</form>