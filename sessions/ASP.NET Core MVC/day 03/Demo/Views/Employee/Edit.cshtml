@*@model EmployeeViewModel*@
@model Employee

@{
    ViewData["Title"] = "Edit";
    var Department = ViewData["Department"];
    var Departments = ViewData["Departments"] as List<Department>;
}

<h1>Edit</h1>
<br />

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="HireDate" class="col-form-label"></label>
        <input asp-for="HireDate" class="form-control" />
        <span class="text-danger" asp-validation-for="HireDate"></span>
    </div>

    @*<label class="col-form-label" asp-for="DepartmentId"></label>
        <select class="form-control" name="DepartmentId" id="@Department">
        @foreach (var item in Departments)
        {
        <option value="@item.Id">@item.Name</option>
        }
        </select>*@
    @*or*@
    <label class="col-form-label" asp-for="DepartmentId"></label>
    <select class="form-control" name="DepartmentId">
        @foreach (var item in Departments)
        {
            if (item?.Name == Department)
            {
                <option value="@item.Id" selected>@item.Name</option>
            }
            else
            {

                <option value="@item.Id" >@item.Name</option>
            }
        }
    </select>

    <br />
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive" />
        <label asp-for="IsActive"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br />


    <input type="submit" class="btn btn-primary" value="Add" />
    <a asp-action="Index" class="btn btn-dark">Back Tio List</a>
</form>

@section Validation {
<partial name="_ValidationScriptsPartial" />
}



