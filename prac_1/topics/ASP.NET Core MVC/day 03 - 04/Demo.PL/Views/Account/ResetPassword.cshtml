@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ResetPassword">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="test-center mb-2">
        <p>Reset Your Password</p>
    </div>
    <input type="hidden" asp-for="Email">
    <input type="hidden" asp-for="Token">
    <input class="text" type="password" placeholder="New Password" asp-for="Password" required="">
    <input class="text w3lpass" type="password" placeholder="Confirm Password" asp-for="ConfirmPassword" required="">
    <input type="submit" value="Reset Password">
</form>