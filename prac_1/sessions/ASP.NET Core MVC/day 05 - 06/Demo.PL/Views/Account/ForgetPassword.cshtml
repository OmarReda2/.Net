@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ForgetPassword">
    <div asp-validation-summary="All" class="text-danger"></div>
    <p>Enter your Email address that you used to register and we will send you email with your username and a link to reset your password</p>
    <input class="text email" type="email" placeholder="Email" asp-for="Email" required="">
    <input type="submit" value="Send Email">
</form>
