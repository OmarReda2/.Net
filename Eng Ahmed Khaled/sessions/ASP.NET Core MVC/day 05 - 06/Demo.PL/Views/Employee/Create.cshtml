@model EmployeeViewModel

@{
    ViewData["Title"] = "Create";
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}

<h1>Create</h1>
<br />
<br />

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control"/>
        <span class="text-danger" asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control"/>
        <span class="text-danger" asp-validation-for="Salary"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control"/>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="HireDate" class="col-form-label"></label>
        <input asp-for="HireDate" class="form-control"/>
        <span class="text-danger" asp-validation-for="HireDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId" class="col-form-label"></label>
        <select asp-for="DepartmentId" asp-items="Departments" class="form-control">
            <options>---- Select Department ----<</options>
        </select>
        <span class="text-danger" asp-validation-for="DepartmentId"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="col-form-label"></label>
        <input asp-for="Image" type="file" class="form-control"/>
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <label asp-for="CV" class="col-form-label"></label>
        <input asp-for="CV" type="file" class="form-control"/>
        <span class="text-danger" asp-validation-for="CV"></span>
    </div>

    <br />
    <div class="demo-checkbox">
        <input type="checkbox" asp-for="IsActive"/>
        <label asp-for="IsActive"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <br />


    <input type="submit" class="btn btn-primary" value="Add"/>
    <a asp-action="Index" class="btn btn-dark">Back To List</a>
</form>

@section Validation {
    <partial name="_ValidationScriptsPartial" />
}


