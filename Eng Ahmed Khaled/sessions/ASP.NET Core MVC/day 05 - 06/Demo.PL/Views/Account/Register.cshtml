@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Register">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input class="text email" type="email" placeholder="Email" asp-for="Email" required="">
    <input class="text" type="password" placeholder="Password" asp-for="Password" required="">
    <input class="text w3lpass" type="password"  placeholder="Confirm Password" asp-for="ConfirmPassword" required="">
    <div class="wthree-text">
        <label class="anim">
            <input type="checkbox" class="checkbox"  asp-for="IsAgree">
            <span>I Agree To The Terms & Conditions</span>
        </label>
        <div class="clear"> </div>
    </div>
    <input type="submit" value="SIGNUP">
</form>
<p>Have an Account? <a asp-action="Login"> Login Now!</a></p>

