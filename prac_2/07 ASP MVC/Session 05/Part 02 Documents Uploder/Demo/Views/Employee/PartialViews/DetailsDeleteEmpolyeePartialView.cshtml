@model EmployeeViewModel

<div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" readonly asp-for="Name"/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" readonly asp-for="Age"/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" readonly asp-for="Salary"/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" readonly asp-for="Email"/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" readonly asp-for="PhoneNumber"/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" readonly asp-for="Address"/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="HireDate"></label>
        <input class="form-control" readonly asp-for="HireDate"/>
    </div>
    <div class="form-group">
        <input class="" asp-for="IsActive" disabled/>
        <label class="col-form-label" asp-for="IsActive"></label>
    </div>
  
    <div class="mb-3">@*this div to show the image*@
        <img src="~/files/Imgs/@Model.ImageName" class="img-fluid rounded" height="40" width="40" alt="Employee Name">
    </div>

    <input hidden asp-for="ImageName" /> @*as when we submit the form the image name be passed with the data in delete action then we can delete the image from the server*@